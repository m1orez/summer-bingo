{
  "compilerOptions": {
    "target": "ES6",                       
    "module": "ESNext",                  
    "moduleResolution": "Node",
    "allowJs": false,                         
    "checkJs": false,
    "outDir": "./dist",                
    "rootDir": "./src",                     
    "strict": true,                      
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
